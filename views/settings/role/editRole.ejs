  <% include ./partials/navbar %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Setting
      <small>Edit Role User</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="/welcome" data-toggle="tooltip" title="dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
      <li><a href="/settings/role" data-toggle="tooltip" title="Role User">Role User</a></li>
      <li class="active">Edit Role User</li>
    </ol>
    <br>
    <div class="box box-default">
      <div class="box-body">
        <form action="/settings/editroleuser/<%= role.id %>?_method=PUT" method="post">
          <input type="hidden" name="_method" value="PUT">
          <div class="form-group">
            <label for=code>Code</label>
            <input type="text" class="form-control" name=code[0] placeholder="Code" value="<%= role.code %>">
          </div>

        <div class="form-group">
            <div class="box box-info">
              <div class="box-body">
                <div class="box-header">
                  <h3 class="box-title">NEW ROLE PERMISSIONS</h3>
                </div>
                <div class="box-body no-padding">
                  <table class="table table-striped">
                    <tr>
                      <th>Code</th>
                      <th>GET</th>
                      <th>POST</th>
                      <th>PUT</th>
                      <th>DELETE</th>
                       <% newRoleData.forEach(function(newRole){ %>
                        <%newRole.permissions.forEach(function(newRolePer,i){ %>
                        </tr>
                        <tr>
                          <td>
                            <input type="checkbox" name=resource[<%=i%>]  placeholder="Code" value="<%= newRolePer.resource %>">
                            <label for=code>Code <%= newRolePer.resource %></label>
                          </td>
                          <%newRolePer.methods.forEach(function(newRolePerMethod,k){ %>
                          <td>
                            <input type="checkbox" name=methods[<%=newRolePer.resource%>]http[<%=k%>] value="<%= newRolePerMethod.http %>">
                          </td>
                          <%});%>
                        <%});%>
                      <%});%>
                  </table>
                </div>
              </div>
            </div>
          </div>

            <div class="form-group">
              <label for="description">Description</label>
              <input type="text" class="form-control" name="description" placeholder="Description" value="<%= role.description %>" required>
            </div>
          </div>
            <div class="box-footer clearfix">
            <button class="pull-right btn btn-default">Save
              <i class="fa fa-arrow-circle-right"></i></button>
          </div>
          </form>
      </div>
    </div>
  </section>
</div>

<% include ./partials/footer %>
