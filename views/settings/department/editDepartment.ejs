<% include ./partials/navbar %>
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Setting
        <small>Edit Department</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/welcome" data-toggle="tooltip" title="dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/settings/departement" data-toggle="tooltip" title="Departement">Department</a></li>
        <li class="active">Edit Department</li>
      </ol>
      <br>
      <div class="box box-default">
        <div class="box-body">
          <form action="/settings/edit-department/<%= dept.id %>?_method=PUT" method="post">
            <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
              <label for=code>Code</label>
              <input type="text" class="form-control" name="code" placeholder="Code" value="<%= dept.code %>" disabled>
            </div>
            <div class="form-group">
              <label for="description">Description</label>
              <input type="text" class="form-control" name="description" placeholder="Description" value="<%= dept.description %>" required>
            </div>
              <hr>
            <div class="box-footer clearfix">
              <button class="pull-right btn btn-default">Save
                <i class="fa fa-arrow-circle-right"></i></button>
            </div>
            </form>
        </div>
      </div>
    </section>
  </div>

  <% include ./partials/footer %>
