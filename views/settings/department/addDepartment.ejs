<% include ./partials/navbar %>
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Setitng
        <small>Add Department</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/welcome" data-toggle="tooltip" title="dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/settings/departement" data-toggle="tooltip" title="Departement">Department</a></li>
        <li class="active">Add Depertment</li>
      </ol>
      <br>
      <% if(error && error.length > 0) { %>
      <% error.forEach(function(errors){ %>
        <div class="alert alert-danger alert-dismissable fade in">
          <button type="button" class="close" data-dismiss="alert">
          <span aria-hidden="true">&times;</span>
          <span class="sr-only">Close</span>
        </button><p><%= errors.message %><%= errors.msg %>
        </span></div>
        <%});%>
        <%}%>
        <small>* (must be filled)</small>
      <div class="box box-default">
        <div class="box-header">

          <i class="fa fa-users"></i>
          <h3 class="box-title">ADD DEPARTEMENT</h3>
          <!-- /. tools -->
        </div>
        <div class="box-body">
          <form action="/settings/add-department" method="post">
            <div class="form-group">
              <input type="text" class="form-control" name="code" placeholder="Code *">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="description" placeholder="Description *">
            </div>
            <div class="box-footer clearfix">
              <button class="pull-right btn btn-default">Save
                <i class="fa fa-arrow-circle-right"></i></button>
            </div>
            </form>
        </div>
      </div>
    </section>
  </div>

  <% include ./partials/footer %>
