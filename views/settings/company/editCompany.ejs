  <% include ./partials/navbar %>

  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Setting
        <small>Edit Company</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/welcome" data-toggle="tooltip" title="dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/settings/company" data-toggle="tooltip" title="Company">Company</a></li>
        <li class="active">Edit Company</li>
      </ol>
      <br>
      <div class="box box-default">
        <div class="box-body">
          <form action="/settings/editcompany/<%= company._id %>?_method=PUT" method="post">
            <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
              <label for=code>Code</label>
              <input type="hidden" value="<%= company.code %>">
              <input type="text" class="form-control" name="code" placeholder="Code" value="<%= company.code %>" disabled>
            </div>
            <div class="form-group">
              <label for="description">Description</label>
              <input type="text" class="form-control" name="description" placeholder="Description" value="<%= company.description %>" required>
            </div>
            <hr>
            <div>
              <label for="alamat">Address</label>
              <textarea name="address" class="textarea" placeholder="address Company"
                        style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" required><%- company.address %></textarea>
            </div>
            <div>
              <label for="alamat1">Address 2</label>
              <textarea name="address1" class="textarea" placeholder="address Company 2"
                        style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" required><%- company.address1 %></textarea>
            </div>
            <hr>
            <div class="form-group">
              <label for="phone">No Telphone</label>
              <input type="text" class="form-control" name="phone" placeholder="No.Hanphone" value="<%= company.phone %>" required>
            </div>

            <div class="form-group">
              <label for="vatregistration">VAT Registration</label>
              <input type="text" class="form-control" name="vatregistration" placeholder="VAT Registration" value="<%= company.vatregistration %>" required>
            </div>
            <div class="form-group">
              <label for="vatname">VAT Name</label>
              <input type="text" class="form-control" name="vatname" placeholder="VAT Name" value="<%= company.vatname %>" required>
            </div>
            <hr>
            <div>
              <label for="varalamat">VAT Address</label>
              <textarea name="vataddress" class="textarea" placeholder="Vat Address Company"
                        style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" required><%= company.vataddress %></textarea>
            </div>
            <div>
              <label for="vatalamat1">VAT Address 2</label>
              <textarea name="vataddress1" class="textarea" placeholder="Vat Address Company 2"
                        style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" required><%= company.address1 %></textarea>
            </div>
            <hr>
            <div class="form-group">
              <label for="vatinvoiceauthorizedname">VAT Invoice Authorized Name</label>
              <input type="text" class="form-control" name="vatinvoiceauthorizedname" placeholder="VAT Invoice Authorized Name" value="<%= company.vatinvoiceauthorizedname %>" required>
            </div>
            <div class="form-group">
              <label for="vatinvoiceauthorizedposition">VAT Invoice Authorized Position</label>
              <input type="text" class="form-control" name="vatinvoiceauthorizedposition" placeholder="VAT Invoice Authorized Position" value="<%= company.vatinvoiceauthorizedposition %>" required>
            </div>
              <hr>
            <div class="box-footer clearfix">
              <button class="pull-right btn btn-default">Save
                <i class="fa fa-arrow-circle-right"></i></button>
            </div>
            </form>
        </div>
      </div>
    </section>
  </div>

  <% include ./partials/footer %>
